<% if current_user %>
<h1>Your Postings</h1>

<table>
 
<% @posts.each do |post| %>
  <tr>
    <td><%= post.content %></td> <br>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>


<br /> 


<!-- Button trigger modal for post -->
  <a data-toggle="modal" href="#myPost" class="btn btn-primary btn-large">New Post to Facebook</a>

<!-- Modal for post -->

  <div class="modal fade" id="myPost">
    <div class="modal-dialog">
      <div class="modal-content">
        <%= form_for :post, :url => {:action => :create} do |f| %>
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
              <%= f.label :content,class: "modal-title", class: "field" %>
        </div>
        
        <div class= "modal-body">
        <%= f.text_field :content, class: "field",class: "input-xlarge", placeholder: "Please input your posting here" %>
        </div>
        
        <div class="modal-footer">
          <div class="actions">
          <a class='btn' class="close" data-dismiss="modal">Close</a>
            <%= f.submit 'Save', class: "btn btn-primary"%>
          </div>
        </div>
      <% end %>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->


<% end %>
